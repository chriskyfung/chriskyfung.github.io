{
  "$schema": "https://frontmatter.codes/config/taxonomy.contenttypes.schema.json",
  "name": "post",
  "pageBundle": false,
  "clearEmpty": true,
  "fields": [
    {
      "title": "Layout",
      "name": "layout",
      "description": "The Jekyll layout file to use",
      "type": "choice",
      "choices": [
        "post"
      ],
      "default": "post",
      "required": true
    },
    {
      "title": "Title",
      "name": "title",
      "type": "string",
      "required": true
    },
    {
      "title": "Author",
      "name": "author",
      "type": "string",
      "default": "chris"
    },
    {
      "title": "Excerpt",
      "name": "excerpt",
      "type": "string"
    },
    {
      "title": "Publishing date",
      "name": "date",
      "type": "datetime",
      "dateFormat": "YYYY-MM-DD HH:MM +0800",
      "default": "{{now}}",
      "isPublishDate": true,
      "required": true
    },
    {
      "title": "Last modified date",
      "name": "last_modified_at",
      "type": "datetime",
      "dateFormat": "YYYY-MM-DD HH:MM +0800",
      "isModifiedDate": true
    },
    {
      "title": "Permalink",
      "name": "permalink",
      "type": "string",
      "default": "/{{slug}}/",
      "required": true
    },
    {
      "title": "Redirect from",
      "name": "redirect_from",
      "type": "list",
      "hidden": true
    },
    {
      "title": "Featured Image",
      "name": "image",
      "type": "fields",
      "fields": [
        {
          "title": "Path",
          "name": "path",
          "description": "Absolute or relative path of a JPG, PNG, or SVG file",
          "type": "image",
          "isPreviewImage": true,
          "default": "/assets/images/write-2160925.svg"
        },
        {
          "title": "Width",
          "name": "width",
          "default": "730",
          "type": "number"
        },
        {
          "title": "Height",
          "name": "height",
          "default": "431",
          "type": "number"
        },
        {
          "title": "Class",
          "name": "class",
          "type": "choice",
          "choices": [
            "shadow-none"
          ]
        },
        {
          "title": "Thumbnail alignment",
          "name": "fit",
          "type": "choice",
          "choices": [
            "left",
            "right"
          ]
        },
        {
          "title": "Hide image",
          "name": "hide",
          "description": "Set to true to not embed the image on this post",
          "type": "boolean"
        }
      ]
    },
    {
      "title": "Category",
      "name": "category",
      "type": "categories"
    },
    {
      "title": "Tags",
      "name": "tags",
      "type": "tags"
    },
    {
      "title": "Additional AMP components",
      "name": "amp",
      "type": "fields",
      "fields": [
        {
          "title": "Gist",
          "name": "gist",
          "type": "boolean"
        },
        {
          "title": "iFrame",
          "name": "iframe",
          "type": "boolean"
        },
        {
          "title": "Script",
          "name": "script",
          "type": "boolean"
        },
        {
          "title": "YouTube",
          "name": "youtube",
          "type": "boolean"
        }
      ]
    },
    {
      "title": "Custum HTML header",
      "name": "custom_header",
      "type": "string"
    },
    {
      "title": "CSS",
      "type": "fields",
      "name": "css",
      "fields": [
        {
          "title": "Badge",
          "name": "badge",
          "type": "boolean"
        },
        {
          "title": "Code block",
          "name": "syntax",
          "type": "boolean"
        },
        {
          "title": "Custom CSS",
          "name": "custom",
          "type": "string"
        }
      ]
    },
    {
      "title": "Sidebar",
      "name": "sidebar",
      "type": "choice",
      "choices": [
        "left",
        "right",
        "none"
      ]
    },
    {
      "title": "Pin as Featured",
      "name": "featured",
      "type": "boolean"
    },
    {
      "title": "Sitemap",
      "name": "sitemap",
      "description": "Exclude this post from the sitemap generated by the jekyll-sitemap plugin by setting the sitemap flag to false",
      "type": "boolean"
    }
  ]
}
