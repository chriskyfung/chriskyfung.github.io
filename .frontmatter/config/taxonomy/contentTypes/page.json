{
  "$schema": "https://frontmatter.codes/config/taxonomy.contenttypes.schema.json",
  "name": "page",
  "pageBundle": false,
  "clearEmpty": true,
  "fields": [
    {
      "title": "Layout",
      "name": "layout",
      "description": "The Jekyll layout file to use",
      "type": "choice",
      "choices": [
        "page"
      ],
      "default": "page",
      "required": true
    },
    {
      "title": "Title",
      "name": "title",
      "type": "string",
      "required": true
    },
    {
      "title": "Author",
      "name": "author",
      "type": "string",
      "default": "chris"
    },
    {
      "title": "Excerpt",
      "name": "excerpt",
      "type": "string"
    },
    {
      "title": "Publishing date",
      "name": "date",
      "type": "datetime",
      "dateFormat": "YYYY-MM-DD HH:MM +0800",
      "default": "{{now}}",
      "isPublishDate": true,
      "required": true
    },
    {
      "title": "Last modified date",
      "name": "last_modified_at",
      "type": "datetime",
      "dateFormat": "YYYY-MM-DD HH:MM +0800",
      "isModifiedDate": true
    },
    {
      "title": "Permalink",
      "name": "permalink",
      "type": "string",
      "default": "/{{slug}}/",
      "required": true
    },
    {
      "title": "Redirect from",
      "name": "redirect_from",
      "type": "list",
      "hidden": true
    },
    {
      "title": "Preview image",
      "name": "image",
      "type": "image",
      "isPreviewImage": true
    },
    {
      "title": "Additional AMP components",
      "name": "amp",
      "type": "fields",
      "fields": [
        {
          "title": "Gist",
          "name": "gist",
          "type": "boolean"
        },
        {
          "title": "iFrame",
          "name": "iframe",
          "type": "boolean"
        },
        {
          "title": "Script",
          "name": "script",
          "type": "boolean"
        },
        {
          "title": "YouTube",
          "name": "youtube",
          "type": "boolean"
        }
      ]
    },
    {
      "title": "Custum HTML header",
      "name": "custom_header",
      "type": "string"
    },
    {
      "title": "CSS",
      "type": "fields",
      "name": "css",
      "fields": [
        {
          "title": "Badge",
          "name": "badge",
          "type": "boolean"
        },
        {
          "title": "Code block",
          "name": "syntax",
          "type": "boolean"
        },
        {
          "title": "Custom CSS",
          "name": "custom",
          "type": "string"
        }
      ]
    },
    {
      "title": "Allow comments",
      "name": "comments",
      "default": "false",
      "type": "boolean"
    },
    {
      "title": "Sidebar",
      "name": "sidebar",
      "type": "choice",
      "choices": [
        "left",
        "right",
        "none"
      ]
    },
    {
      "title": "Redirect to",
      "name": "redirect_to",
      "type": "string",
      "single": true
    },
    {
      "title": "Sitemap",
      "name": "sitemap",
      "description": "Exclude this post from the sitemap generated by the jekyll-sitemap plugin by setting the sitemap flag to false",
      "type": "boolean"
    }
  ]
}
