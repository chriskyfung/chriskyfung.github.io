    "jekyll-capture-tags": {
      "title": "Storing Text in a Variable",
      "description": "Use Jekyll capture tags to save text in variables and access them in your content or layout",
      "body": [
        "{% capture [[var]] %}",
        "[[&selection]]",
        "{% endcapture %}"
      ],
      "fields": [
        {
          "name": "var",
          "title": "variable name",
          "type": "string",
          "single": true,
          "default": "myVar"
        },
        {
          "name": "selection",
          "title": "Selected Text",
          "type": "string",
          "default": "FM_SELECTED_TEXT"
        }
      ]
    },
    "jekyll-raw-tags": {
      "title": "Escape Liquid Syntax",
      "description": "Use Jekyll raw tags to prevent Liquid filters from being applied to your code blocks or other parts of your content that contain curly braces, and preserve your original content",
      "body": [
        "{% raw %}",
        "[[&selection]]",
        "{% endraw %}"
      ],
      "fields": [
        {
          "name": "selection",
          "title": "Selected Text",
          "type": "string",
          "default": "FM_SELECTED_TEXT"
        }
      ]
    },
    "kramdown-comment": {
      "title": "Insert Markdown Comment",
      "description": "Use kramdown comment syntax to hide text from the output and preserve it in the source",
      "body": [
        "{::comment}",
        "[[&selection]]",
        "{:/comment}"
      ],
      "fields": [
        {
          "name": "selection",
          "title": "Selected Text",
          "type": "string",
          "default": "FM_SELECTED_TEXT"
        }
      ]
    },
    "kramdown-nomarkdown": {
      "title": "Escape kramdown Processing for Selected Text",
      "description": "Use the kramdown nomarkdown syntax to mark the selected text as raw text and prevent kramdown from parsing it",
      "body": [
        "{::nomarkdown}",
        "[[&selection]]",
        "{:/nomarkdown}"
      ],
      "fields": [
        {
          "name": "selection",
          "title": "Selected Text",
          "type": "string",
          "default": "FM_SELECTED_TEXT"
        }
      ]
    },
    "kramdown-footnote": {
      "title": "Create a Footnote with Markdown",
      "description": "Use the kramdown footnote syntax to mark the selected text as a footnote and link it to a reference number in the text",
      "openingTags": "{{",
      "closingTags": "}}",
      "body": [
        "[^{{name}}]:",
        "  {{&selection}}"
      ],
      "fields": [
        {
          "name": "name",
          "title": "Footnote Name",
          "type": "string",
          "single": true,
          "default": "1"
        },
        {
          "name": "selection",
          "title": "Selected Text",
          "type": "string",
          "default": "FM_SELECTED_TEXT"
        }
      ]
    }
