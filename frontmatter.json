  "frontMatter.projects": [
    {
      "name": "blog post",
      "default": true,
      "configuration": {
        "frontMatter.content.publicFolder": "/",
        "frontMatter.content.pageFolders": [
          {
            "title": "Drafts",
            "path": "[[workspace]]/_drafts",
            "contentTypes": [
              "post"
            ]
          },
          {
            "title": "Posts",
            "path": "[[workspace]]/_posts",
            "previewPath": "/{{fm.permalink}}/",
            "contentTypes": [
              "post"
            ]
          }
        ]
      }
    },
    {
      "name": "site page",
      "configuration": {
        "frontMatter.content.publicFolder": "assets",
        "frontMatter.content.pageFolders": [
          {
            "title": "pages",
            "path": "[[workspace]]/",
            "excludeSubdir": true
          }
        ]
      }
    }
  ],
  "frontMatter.data.files": [
    {
      "id": "suggestions",
      "title": "Search Suggestions",
      "file": "[[workspace]]/assets/data/suggestions.json",
      "fileType": "json",
      "labelField": "items",
      "singleEntry": true,
      "schema": {
        "title": "Items",
        "type": "object",
        "required": [
          "items"
        ],
        "properties": {
          "items": {
            "title": "Items",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  ],
  "frontMatter.dashboard.openOnStart": true,
  "frontMatter.git.enabled": true,
  "frontMatter.git.commitMessage": "Synced by Front Matter {{hour24}}:{{minute}}",
  "frontMatter.framework.id": "jekyll",
  "frontMatter.content.publicFolder": "assets",
  "frontMatter.preview.host": "http://localhost:4000",
  "frontMatter.site.baseURL": "https://chriskyfung.github.io",
  "frontMatter.website.host": "https://chriskyfung.github.io",
  "frontMatter.content.snippets": {
    "Image snippet": {
      "description": "Use the picture.html template to insert an image with alternative text and a caption for accessibility and SEO purposes",
      "body": "{% include picture.html img=\"[[&mediaUrl]]\" width=\"[[mediaWidth]]\" height=\"[[mediaHeight]]\" alt=\"[[alt]]\" caption=\"[[&caption]]\" [[&attributes]] [[&layout]][[&lightbox]]source=\"raw\" %}",
      "isMediaSnippet": true,
      "fields": [
        {
          "name": "attributes",
          "title": "class=\"MyClass\" link=\"/page-URL\"",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "layout",
          "title": "Layout",
          "type": "choice",
          "choices": [
            "",
            "layout=\"fill\" ",
            "layout=\"fixed\" ",
            "layout=\"fixed-height\" ",
            "layout=\"flex-item\" ",
            "layout=\"intrinsic\" ",
            "layout=\"nodisplay\" ",
            "layout=\"responsive\" "
          ],
          "default": ""
        },
        {
          "name": "lightbox",
          "title": "Lightbox",
          "type": "choice",
          "choices": [
            "",
            "lightbox=true ",
            "lightbox=false "
          ],
          "default": ""
        }
      ]
    },
    "amp-gist": {
      "title": "Embed a gist with AMP",
      "description": "Use the amp-gist component to embed a gist by providing the gist ID and the height of the iframe",
      "body": "<amp-gist data-gistid=\"[[gist_id]]\" layout=\"fixed-height\" height=\"[[height]]\"></amp-gist>",
      "fields": [
        {
          "name": "gist_id",
          "title": "gist ID",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "height",
          "title": "height",
          "type": "string",
          "single": true,
          "default": "500"
        }
      ]
    },
    "amp-gist-file": {
      "title": "Embed a single file from a gist with AMP",
      "description": "Use the amp-gist component to embed a specific file from a gist by providing the gist ID, the file name, and the height of the iframe",
      "body": "<amp-gist data-gistid=\"[[gist_id]]\" data-file=\"[[filename]]\" layout=\"fixed-height\" height=\"[[height]]\"></amp-gist>",
      "fields": [
        {
          "name": "gist_id",
          "title": "gist ID",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "filename",
          "title": "File name",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "height",
          "title": "height",
          "type": "string",
          "single": true,
          "default": "500"
        }
      ]
    },
    "include-youtube-playlist": {
      "description": "Use the youtube.html template to embed a YouTube playlist on your AMP page by providing the playlist ID and the video ID of the first video to play",
      "body": "{% include youtube.html id=\"[[vid]]\" playlist=\"[[playlist_id]]\" title=\"[[title]]\" %}",
      "fields": [
        {
          "name": "vid",
          "title": "first video ID in the playlist",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "playlist_id",
          "title": "playlist ID",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "title",
          "title": "title",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "include-youtube-video": {
      "title": "Embed a YouTube video with AMP",
      "description": "Use the youtube.html template to embed a YouTube video on your AMP page by providing the video ID",
      "body": "{% include youtube.html id=\"[[vid]]\" title=\"[[title]]\" %}",
      "fields": [
        {
          "name": "vid",
          "title": "video ID",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "title",
          "title": "title",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "amp-audio": {
      "title": "Embed an audio file with AMP",
      "description": "Use the amp-audio component to embed an audio file from a URL",
      "body": [
        "<amp-audio width=\"auto\" height=\"50\" src=\"[[sourceURL]]\">",
        "  <div fallback>Your browser doesn’t support HTML5 audio</div>",
        "</amp-audio>"
      ],
      "fields": [
        {
          "name": "sourceURL",
          "title": "source URL",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "enable-amp-audio": {
      "title": "Enable amp-audio on your page or post",
      "description": "The frontmatter for allowing the use of the amp-audio component on your page or post",
      "body": [
        "custom_head: >-",
        "  <script async custom-element=\"amp-audio\" src=\"https://cdn.ampproject.org/v0/amp-audio-0.1.js\"></script>"
      ],
      "fields": []
    }
  }
}
