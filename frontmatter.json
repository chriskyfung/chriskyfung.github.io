  "frontMatter.projects": [
    {
      "name": "blog post",
      "default": true,
      "configuration": {
        "frontMatter.content.publicFolder": "/",
        "frontMatter.content.pageFolders": [
          {
            "title": "Drafts",
            "path": "[[workspace]]/_drafts",
            "contentTypes": [
              "post"
            ]
          },
          {
            "title": "Posts",
            "path": "[[workspace]]/_posts",
            "previewPath": "/{{fm.permalink}}/",
            "contentTypes": [
              "post"
            ]
          }
        ]
      }
    },
    {
      "name": "site page",
      "configuration": {
        "frontMatter.content.publicFolder": "assets",
        "frontMatter.content.pageFolders": [
          {
            "title": "pages",
            "path": "[[workspace]]/",
            "excludeSubdir": true
          }
        ]
      }
    }
  ],
  "frontMatter.data.files": [
    {
      "id": "suggestions",
      "title": "Search Suggestions",
      "file": "[[workspace]]/assets/data/suggestions.json",
      "fileType": "json",
      "labelField": "items",
      "singleEntry": true,
      "schema": {
        "title": "Items",
        "type": "object",
        "required": [
          "items"
        ],
        "properties": {
          "items": {
            "title": "Items",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  ],
  "frontMatter.dashboard.openOnStart": true,
  "frontMatter.git.enabled": true,
  "frontMatter.git.commitMessage": "Synced by Front Matter {{hour24}}:{{minute}}",
  "frontMatter.framework.id": "jekyll",
  "frontMatter.content.publicFolder": "assets",
  "frontMatter.preview.host": "http://localhost:4000",
  "frontMatter.site.baseURL": "https://chriskyfung.github.io",
  "frontMatter.website.host": "https://chriskyfung.github.io",
  "frontMatter.content.snippets": {
    "Image snippet": {
      "description": "Use the picture.html template to insert an image with alternative text and a caption for accessibility and SEO purposes",
      "body": "{% include picture.html img=\"[[&mediaUrl]]\" width=\"[[mediaWidth]]\" height=\"[[mediaHeight]]\" alt=\"[[alt]]\" caption=\"[[&caption]]\" [[&attributes]] [[&layout]][[&lightbox]]source=\"raw\" %}",
      "isMediaSnippet": true,
      "fields": [
        {
          "name": "attributes",
          "title": "class=\"MyClass\" link=\"/page-URL\"",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "layout",
          "title": "Layout",
          "type": "choice",
          "choices": [
            "",
            "layout=\"fill\" ",
            "layout=\"fixed\" ",
            "layout=\"fixed-height\" ",
            "layout=\"flex-item\" ",
            "layout=\"intrinsic\" ",
            "layout=\"nodisplay\" ",
            "layout=\"responsive\" "
          ],
          "default": ""
        },
        {
          "name": "lightbox",
          "title": "Lightbox",
          "type": "choice",
          "choices": [
            "",
            "lightbox=true ",
            "lightbox=false "
          ],
          "default": ""
        }
      ]
    },
    "amp-gist": {
      "title": "Embed a gist with AMP",
      "description": "Use the amp-gist component to embed a gist by providing the gist ID and the height of the iframe",
      "body": "<amp-gist data-gistid=\"[[gist_id]]\" layout=\"fixed-height\" height=\"[[height]]\"></amp-gist>",
      "fields": [
        {
          "name": "gist_id",
          "title": "gist ID",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "height",
          "title": "height",
          "type": "string",
          "single": true,
          "default": "500"
        }
      ]
    },
    "amp-gist-file": {
      "title": "Embed a single file from a gist with AMP",
      "description": "Use the amp-gist component to embed a specific file from a gist by providing the gist ID, the file name, and the height of the iframe",
      "body": "<amp-gist data-gistid=\"[[gist_id]]\" data-file=\"[[filename]]\" layout=\"fixed-height\" height=\"[[height]]\"></amp-gist>",
      "fields": [
        {
          "name": "gist_id",
          "title": "gist ID",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "filename",
          "title": "File name",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "height",
          "title": "height",
          "type": "string",
          "single": true,
          "default": "500"
        }
      ]
    },
    "include-youtube-playlist": {
      "description": "Use the youtube.html template to embed a YouTube playlist on your AMP page by providing the playlist ID and the video ID of the first video to play",
      "body": "{% include youtube.html id=\"[[vid]]\" playlist=\"[[playlist_id]]\" title=\"[[title]]\" %}",
      "fields": [
        {
          "name": "vid",
          "title": "first video ID in the playlist",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "playlist_id",
          "title": "playlist ID",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "title",
          "title": "title",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "include-youtube-video": {
      "title": "Embed a YouTube video with AMP",
      "description": "Use the youtube.html template to embed a YouTube video on your AMP page by providing the video ID",
      "body": "{% include youtube.html id=\"[[vid]]\" title=\"[[title]]\" %}",
      "fields": [
        {
          "name": "vid",
          "title": "video ID",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "title",
          "title": "title",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "amp-audio": {
      "title": "Embed an audio file with AMP",
      "description": "Use the amp-audio component to embed an audio file from a URL",
      "body": [
        "<amp-audio width=\"auto\" height=\"50\" src=\"[[sourceURL]]\">",
        "  <div fallback>Your browser doesn’t support HTML5 audio</div>",
        "</amp-audio>"
      ],
      "fields": [
        {
          "name": "sourceURL",
          "title": "source URL",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "enable-amp-audio": {
      "title": "Enable amp-audio on your page or post",
      "description": "The frontmatter for allowing the use of the amp-audio component on your page or post",
      "body": [
        "custom_head: >-",
        "  <script async custom-element=\"amp-audio\" src=\"https://cdn.ampproject.org/v0/amp-audio-0.1.js\"></script>"
      ],
      "fields": []
    },
    "include-toc": {
      "title": "Table of Contents (TOC)",
      "description": "Use the include.md template to insert a table of contents that links to the headings in your markdown content",
      "body": "{% include toc.md %}",
      "fields": []
    },
    "excerpt-separator": {
      "title": "Excerpt separator",
      "description": "Use the <!--more--> tag in your markdown content to mark the end of the excerpt that will be displayed on your index page or other listing pages",
      "body": "<!--more-->",
      "fields": []
    },
    "kramdown-attribute-list": {
      "title": "Add attributes to Markdown element",
      "description": "Use the kramdown attribute list syntax to add HTML attributes such as id, class, or style to any element in your markdown content. For example: id=\"para-one\" class=\"cls1 cls2\"",
      "body": "{: [[&attributes]] }",
      "fields": [
        {
          "name": "attributes",
          "title": "attributes",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "jekyll-link-tag": {
      "title": "Get Permalink for a File",
      "description": "Use the Jekyll link tag to insert the correct permalink URL for a file path you specify. For example: {% link /assets/files/doc.pdf %}",
      "body": "[{{linkid}}]: {% link {{&relative_path}} {{title}} %}}",
      "openingTags": "{{",
      "closingTags": "}}",
      "fields": [
        {
          "name": "linkid",
          "title": "link ID",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "relative_path",
          "title": "relative path from the root directory to a file. Example: /assets/files/doc.pdf",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "title",
          "title": "title in single or double quotes (Optional)",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "jekyll-postUrl-tag": {
      "title": "Get Permalink for a Post",
      "description": "Use the Jekyll post_url tag to insert the permalink URL of a post. For example: {% post_url /subdir/2010-07-21-name-of-post %}",
      "body": "[{{linkid}}]: {% post_url {{&subdir}}{{&filename}} {{&title}} %}",
      "openingTags": "{{",
      "closingTags": "}}",
      "fields": [
        {
          "name": "linkid",
          "title": "link ID",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "filename",
          "title": "filename without extension. Example: 2010-07-21-name-of-post",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "subdir",
          "title": "subdirectory path to the post (Optional). Example: /subdir/",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "title",
          "title": "title in single or double quotes (Optional)",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "jekyll-highlight-tags": {
      "title": "Jekyll Syntax Highlighting Block",
      "description": "Use the Jekyll highlight tag to format the selected text with syntax highlighting for a specific language",
      "body": [
        "{% highlight [[type]] %}",
        "  [[&selection]]",
        "{% endhighlight %}"
      ],
