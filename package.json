{
  "name": "chriskyfung.github.io",
  "description": "Chris KY FUNG's GitHub Page",
  "version": "3.2.0",
  "scripts": {
    "start": "npm run jekyll",
    "jekyll": "bundle exec jekyll serve",
    "jekyll:trace": "bundle exec jekyll serve --trace",
    "build": "bundle exec jekyll build && npx gulp build",
    "build:prod": "npx cross-env JEKYLL_ENV=production bundle exec jekyll build && npx gulp build",
    "predeploy": "node -e \"if (require('os').platform() === 'win32') { console.log('\\x1b[33mNotice: This npm script is designed to run on Linux. Please use a Linux OS.\\x1b[0m'); process.exit(1); }\"",
    "deploy": "npx gh-pages --dist _site --branch master --nojekyll",
    "test": "npx gulp validate",
    "test:markdownlint": "npx markdownlint-cli2 ./_posts/**/*.md",
    "test:markdownlint:stdout": "npx markdownlint-cli2 ./_posts/**/*.md 2>&1",
    "watch": "npx gulp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chriskyfung/chriskyfung.github.io.git"
  },
  "keywords": [
    "jekyll",
    "theme",
    "jekyll-theme",
    "github-pages",
    "amp",
    "jekyll-themes",
    "accelerated-mobile-pages",
    "blog-theme",
    "responsive-theme",
    "amp-jekyll",
    "jekyll-theme-amp"
  ],
  "author": "Chris K.Y. Fung",
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/chriskyfung/chriskyfung.github.io/issues"
  },
  "homepage": "https://github.com/chriskyfung/chriskyfung.github.io#readme",
  "engines": {
    "node": ">=18.12.1",
    "npm": ">=9.1.2"
  },
  "type": "module",
  "devDependencies": {
    "@ampproject/toolbox-optimizer": "^2.10.1",
    "amphtml-validator": "^1.0.38",
    "gh-pages": "^6.2.0",
    "glob-parent": "^6.0.2",
    "gulp": "^5.0.0",
    "gulp-amphtml-validator": "^1.0.8",
    "gulp-html-minifier-terser": "^7.1.0",
    "markdownlint-cli2": "^0.17.2",
    "through2": "^4.0.2"
  },
  "overrides": {
    "@ampproject/toolbox-optimizer": {
      "postcss": "^8.4.33",
      "terser": ">=5.15.1"
    }
  }
}
